package merge_sorted_array;

public class Solution {
  public void merge(int A[], int m, int B[], int n) {
    if (n < 0 || m < 0 || A.length < m + n) {
      return;
    }

    for (int i = m - 1; i >= 0; i--) {
      A[i + n] = A[i];
    }

    int i = 0;
    int j = 0;
    for (int k = 0; k < m + n; k++) {
      if (i < m && j < n) {
        if (A[n + i] <= B[j]) {
          A[k] = A[n + i];
          i++;
        } else {
          A[k] = B[j];
          j++;
        }
      } else if (i >= m) {
        A[k] = B[j++];
      }
    }
  }
}
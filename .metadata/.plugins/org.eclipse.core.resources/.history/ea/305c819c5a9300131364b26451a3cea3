package three_sum;

public class Solution {
  public ArrayList<ArrayList<Integer>> threeSum(int[] num) {
    Set<ArrayList<Integer>> result = new HashSet<ArrayList<Integer>>();
    if (num.length < 3) {
      return new ArrayList<ArrayList<Integer>>(result);
    }
    Arrays.sort(num);
    int end = num.length - 1;
    while (end > 1) {
      int i = 0;
      int j = end - 1;
      while (i < j) {
        int sum = threeSum(num, i, j, end);
        if (sum == 0) {
          ArrayList<Integer> list = new ArrayList<Integer>();
          list.add(num[i]);
          list.add(num[j]);
          list.add(num[end]);
          result.add(list);
          i++;
          j--;
        } else if (sum > 0) {
          j--;
        } else {
          i++;
        }
      }
      end--;
    }
    return new ArrayList<ArrayList<Integer>>(result);
  }

  private int threeSum(int[] num, int i, int j, int end) {
    return num[i] + num[j] + num[end];
  }
}
